{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [".vitepress/*"],
      "~/*": ["./*"],
      "vitepress-clear-blog/*": ["./packages/theme/src/*"]
    }
  },
  "include": ["packages/**/*.ts", "packages/**/*.d.ts", "packages/**/*.vue"],
  "exclude": ["node_modules", "dist"]
}
