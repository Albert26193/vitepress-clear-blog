{
  "name": "blog-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "A VitePress blog monorepo",
  "type": "module",
  "scripts": {
    "build": "pnpm clean && pnpm build:package",
    "build:package": "pnpm -r --stream build",
    "clean": "pnpm -r --stream clean",
    "dev": "pnpm --stream '/(dev:package|docs:dev)/'",
    "test:ui": "pnpm -r --stream '/(test:ui)/'",
    "dev:package": "pnpm --parallel dev",
    "docs:dev": "pnpm -F=docs docs:dev",
    "docs:build": "pnpm -F=docs docs:build",
    "docs:clean": "pnpm -F=docs docs:clean",
    "preview": "vitepress preview",
    "prepare": "husky",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "format": "prettier --write .",
    "lint:fix": "eslint --fix './.vitepress/**/*.{ts,tsx,js,jsx,vue}'",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.13.5",
    "@unocss/preset-icons": "66.1.0-beta.3",
    "@vitest/coverage-v8": "^3.0.8",
    "commitlint": "^19.7.1",
    "conventional-changelog-cli": "^5.0.0",
    "cpx2": "^8.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-vue": "^9.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rimraf": "^6.0.1",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.25.0",
    "unocss": "66.1.0-beta.3",
    "vitest": "^3.0.8"
  },
  "lint-staged": {
    "*.{js,ts,vue,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}